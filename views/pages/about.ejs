  <script>
    const form = document.getElementById("discussion-form");
    const messagesList = document.getElementById("messages-list");

    
    document.addEventListener("DOMContentLoaded", () => {
      const storedMessages = JSON.parse(localStorage.getItem("communityMessages")) || [];
      storedMessages.forEach(msg => addMessageToDOM(msg.id, msg.name, msg.text));
    });

    
    form.addEventListener("submit", function (e) {
      e.preventDefault();
      const name = document.getElementById("name").value.trim();
      const message = document.getElementById("message").value.trim();

      if (name && message) {
        const newMessage = {
          id: Date.now().toString(), 
          name,
          text: message
        };

        
        addMessageToDOM(newMessage.id, newMessage.name, newMessage.text);

      
        const storedMessages = JSON.parse(localStorage.getItem("communityMessages")) || [];
        storedMessages.unshift(newMessage);
        localStorage.setItem("communityMessages", JSON.stringify(storedMessages));

        form.reset();
      }
    });

    
    function addMessageToDOM(id, name, text) {
      const entry = document.createElement("div");
      entry.className = "message-entry";
      entry.setAttribute("data-id", id);
      entry.innerHTML = `
        <strong>${name}</strong>
        <p>${text}</p>
        <button class="delete-btn">Delete</button>
      `;
      messagesList.prepend(entry);

      
      entry.querySelector(".delete-btn").addEventListener("click", () => {
        deleteMessage(id);
      });
    }

    
    function deleteMessage(id) {
      const storedMessages = JSON.parse(localStorage.getItem("communityMessages")) || [];
      const updatedMessages = storedMessages.filter(msg => msg.id !== id);
      localStorage.setItem("communityMessages", JSON.stringify(updatedMessages));

      const messageElement = document.querySelector(`.message-entry[data-id="${id}"]`);
      if (messageElement) {
        messageElement.remove();
      }
    }
  </script>
